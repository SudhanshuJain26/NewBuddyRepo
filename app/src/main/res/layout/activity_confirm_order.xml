<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"


    tools:context="indwin.c3.shareapp.ProductsPage">


    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#F28E52">

        <ImageView
            android:id="@+id/backo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/back11"
            android:tint="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/backo"
            android:text="Confirm Order"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </RelativeLayout>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/toolBar"
            android:id="@+id/scrollConfirm"

            android:background="#ffffff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:focusable="true"
        android:id="@+id/touch"

        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:id="@+id/log"

        android:layout_margin="@dimen/activity_horizontal_margin"
        android:src="@drawable/product"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android iPhone 6s"
        android:id="@+id/tit"
        android:layout_below="@id/toolBar"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@id/log"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manufacture: Apple"
        android:paddingTop="@dimen/four"
        android:id="@+id/man"
        android:layout_below="@id/tit"


        android:layout_toRightOf="@id/log"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sell"
        android:layout_below="@id/man"
        android:paddingTop="@dimen/four"
        android:layout_toRightOf="@id/log"

        android:src="@drawable/snapdeal"/>
    <RelativeLayout
        android:id="@+id/rlmanProd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/log">

        <TextView
            android:id="@+id/sellerMrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/left"
        android:text="FINANCING"
            android:textAppearance="?android:textAppearanceSmall" />
        <RelativeLayout
            android:layout_width="wrap_content"
         android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dp"
            android:layout_marginBottom="4dp"

            android:textAppearance="?android:textAppearanceSmall"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/left"
            android:text="DOWNPAYMENT"/>
            <TextView
                android:id="@+id/servicepr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dp"


                android:textColor="#000000"

                android:text="Rs 9k9" />
            </RelativeLayout>
        <TextView
            android:id="@+id/sellerMrpValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sellerMrp"
            android:layout_marginBottom="@dimen/left"
            android:textColor="#000000"

            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Rs 49,999" />
        <TextView
            android:id="@+id/sellerpr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sellerMrp"
            android:textColor="#33A4D0"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/left"
android:layout_toRightOf="@id/sellerMrpValue"
            android:layout_marginLeft="@dimen/left"


            android:text="Seller Price  " />

        <TextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sellerMrp"
            android:layout_marginBottom="@dimen/left"
            android:visibility="gone"
            android:layout_toRightOf="@id/servicepr"
            android:layout_marginLeft="@dimen/left"
        android:textColor="#33A4D0"

            android:text="Service Charge" />

        <TextView
            android:id="@+id/priceChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"

            android:layout_below="@id/sellerMrp"
            android:layout_marginBottom="@dimen/left"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@id/sellerMrpValue"
            android:background="#000000"
            android:paddingLeft="@dimen/left"
            android:paddingRight="@dimen/left"

            android:text="Additional costs?"
            android:textColor="#fff" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="NEXT DUE DATE"
        android:id="@+id/flex"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_below="@id/rlmanProd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/four"
        android:text="Rs200    "
        android:id="@+id/flexVal"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/flex"/>
        <TextView
            android:id="@+id/disc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flex"
            android:textColor="#33A4D0"
            android:visibility="gone"
            android:layout_marginTop="@dimen/four"
            android:layout_marginBottom="@dimen/left"
            android:layout_toRightOf="@id/flexVal"
            android:layout_marginLeft="@dimen/left"


            android:text="Discount" />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_below="@id/flexVal"
           android:id="@+id/reltot"
           android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="TOTAL PAYABLE AMOUNT"
        android:id="@+id/down"
        />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/detailsDis"
               android:textColor="#21A5E0"
               android:layout_marginLeft="@dimen/activity_horizontal_margin"
               android:layout_toRightOf="@id/down"
               android:layout_below="@id/down"
               android:text="Details"/>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/four"

        android:id="@+id/downVal"

        android:layout_below="@id/down">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/finan"
    android:text="Financing:"
    android:visibility="gone"
    android:textColor="#000000"
    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downP"
                android:visibility="gone"
                android:layout_below="@id/finan"
android:layout_marginTop="@dimen/four"
                android:text="Downpayment:"
                android:textColor="#33A4D0"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emimonths"
                android:text="ccc"


                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/downV"
                android:layout_below="@id/finan"
                android:layout_marginTop="@dimen/four"
                android:text="Downpayment:"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_toRightOf="@id/downP"
                android:textColor="#33A4D0"
                />
        </RelativeLayout>
       </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Next Payment"
        android:visibility="gone"
        android:id="@+id/nxt"
        android:layout_below="@id/reltot"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/four"
        android:text="5 May 2016"
        android:textColor="#000000"
        android:visibility="gone"
        android:id="@+id/nxtVal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/nxt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Want to specify something?"
            android:id="@+id/want"
            android:layout_below="@id/nxtVal"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:id="@+id/edtWant"
            android:layout_below="@id/want"
            android:textStyle="italic"
            android:hint="Size and color, delivery options or anything else ..."
            android:layout_marginBottom="100dp"
            android:background="@drawable/roundedproducts"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"/>

</RelativeLayout>
    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#44C2A6"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:id="@+id/checkOutnow"
        android:text="Choose Delivery Address"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:rotationY="180"
        android:src="@drawable/back11"
        android:tint="#ffffff" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/cover"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#cc000000"></RelativeLayout>
</RelativeLayout>