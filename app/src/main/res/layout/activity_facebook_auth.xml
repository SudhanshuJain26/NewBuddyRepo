<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookAuth">

    <ImageView
        android:id="@+id/buddyLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/buddylogo_blue" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        facebook:com_facebook_login_text="Connect your account" />

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_button"
        android:layout_centerInParent="true"
        android:background="@xml/progress"
        android:visibility="gone" />

    <TextView
        android:id="@+id/loginface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_button"
        android:layout_centerInParent="true"
        android:layout_marginBottom="56dp"
        android:text="Login with Facebook to continue."
        android:textColor="#4A4A4A"
        android:textStyle="bold" />
</RelativeLayout>