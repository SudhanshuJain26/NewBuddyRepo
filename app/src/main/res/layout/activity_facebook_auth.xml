<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacebookAuth">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/buddyLogo"
        android:layout_marginTop="40dp"
        android:src="@drawable/buddylogo_blue"/>




    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        facebook:com_facebook_login_text="Connect your account"

        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressBar1"

        android:background="@xml/progress"
        android:layout_above="@id/login_button"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginface"
        android:layout_marginBottom="56dp"

        android:layout_centerInParent="true"

        android:layout_above="@id/login_button"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:text="Login with Facebook to continue."/>
</RelativeLayout>