<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.buddy.myapplication.Inviteform">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enter"
        android:layout_marginTop="120dp"
        android:padding="10dp"
        android:textColor="#4A4A4A"
        android:layout_centerHorizontal="true"
        android:text="ENTER DETAILS"/>
    <EditText
        android:id="@+id/name"
android:layout_below="@id/enter"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:textColorHint="#664A4A4A"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:hint="NAME"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:textColorHint="#664A4A4A"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        android:hint="EMAIL"/>
    <AutoCompleteTextView
        android:id="@+id/college"
        android:textColorHint="#664A4A4A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"

        android:layout_below="@id/email"
        android:hint="College"/>
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:inputType="number"
        android:textColorHint="#664A4A4A"
        android:layout_marginTop="5dp"
        android:layout_below="@id/college"
        android:hint="PHONE"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/phone"
        android:textColor="#4A4A4A"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"

        android:text="We will send a One Time Password on your phone.Please enter it in the next step"
        android:id="@+id/invisible"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#4A4A4A"
        android:layout_centerInParent="true"
        android:id="@+id/invite"
        android:layout_below="@id/invisible"/>
</RelativeLayout>

