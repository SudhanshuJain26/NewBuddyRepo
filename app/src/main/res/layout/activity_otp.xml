<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"

                tools:context="indwin.c3.shareapp.Otp">
    <ImageView
        android:id="@+id/buddyLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/buddylogo_blue"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buddyLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Share and earn upto Rs.10,000!"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ffffff"/>
    <RelativeLayout
        android:id="@+id/rlCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRCode"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:background="@drawable/border1"
        android:paddingBottom="4dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="4dp"
    >

        <RelativeLayout
            android:id="@+id/rlshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#33ffffff"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp">
            <ImageView
                android:id="@+id/share"
                android:layout_width="32dp"

                android:layout_height="32dp"
                android:paddingTop="16dp"
                android:src="@drawable/shareicon"
                android:tint="#ffffff"/>
            <TextView
                android:id="@+id/shareNow"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/share"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"

                android:text="Aniket2908"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlCode"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:layout_marginTop="24dp"
        android:text="Share your unique referral link with friends for signing up for Buddy."
        android:textColor="#ffffff"/>

    <TextView

        android:id="@+id/line_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:text="Your friend gets Rs 150 cashback as soon as they sign up with your referral code and you get Rs 150 Cashback when they place their first order!"
        android:textColor="#ffffff"/>
    <TextView

        android:id="@+id/line_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_2"
        android:layout_centerInParent="true"
        android:text="up buying a gadget,we will give you 10% of the "
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/line_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_3"
        android:layout_centerInParent="true"
        android:text="order value (upto. Rs 600) in cash!"
        android:visibility="invisible"/>
    <TextView

        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_4"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:text="DONE"
        android:textColor="#ffffff"
        android:textStyle="bold"/>


</RelativeLayout>
