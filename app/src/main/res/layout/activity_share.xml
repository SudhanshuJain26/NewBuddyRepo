<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="indwin.c3.shareapp.Share">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome to Buddy!"
android:layout_marginTop="60dp"
    android:padding="20dp"
    android:gravity="center"
android:textColor="#323232"
    android:id="@+id/welc"

    android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We will send you a password on your registered phone"

    android:layout_below="@id/welc"
        android:paddingLeft="20dp"

        android:textColor="#80323232"

        android:id="@+id/msg"

        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@id/msg"
        android:src="@drawable/buddyshare"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share"
        android:padding="10dp"
        android:id="@+id/shareLink"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
