<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="indwin.c3.shareapp.activities.ShowSelectedItems">
    
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_centerInParent="true"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/success_frame"
        android:background="@drawable/layout_bg"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/success1x"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invites sent successfully!"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        
        
        
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="@color/background">

        <ImageView
            android:id="@+id/backo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="8dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/back11"
            android:tint="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/backo"
            android:text="Invite List"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop  = "15dp"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/toolBar"
        android:layout_gravity = "center_vertical"
        android:id="@+id/phone_contacts"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/phone"
            android:id="@+id/phone_image"
            android:paddingTop="7dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSignature"
            android:text = "Phone Contacts"
            android:layout_toRightOf="@+id/phone_image"
            android:textStyle="bold"
            android:id="@+id/phone_text"
            android:layout_marginLeft="5dp"
            android:paddingTop="4dp"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_items"
            android:layout_toRightOf="@+id/phone_text"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorSignature"
            android:paddingTop="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text = "21 invited"
            android:paddingTop ="2dp"
            android:id="@+id/phone_invited"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_text"
            android:textColor="@color/textcolor_invite"
            android:textSize="13sp"
            android:layout_marginLeft="25dp"
            android:paddingBottom="10dp"
            android:id="@+id/text"
            />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_contacts"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop ="4dp"
            android:paddingBottom="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blueuser1x"
                android:layout_marginLeft="20dp"
                android:id="@+id/image1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = ""
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/text1"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop ="4dp"
                android:paddingBottom="4dp"
                android:alpha="0.7"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blueuser1x"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/image2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = ""
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/text2"/>
    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop ="4dp"
                    android:paddingBottom="4dp"
                    android:alpha="0.4"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blueuser1x"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/image3"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = ""
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/text3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop ="4dp"
                        android:paddingBottom="4dp"
                        android:alpha="0.2"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/blueuser1x"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/image4"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = ""
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/text4"/>


                        </LinearLayout>

                </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/textcolor_invite"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/line"
        android:text ="Add More"
        android:id="@+id/add"
        android:padding="6dp"
        android:textColor="@color/colorSignature"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop  = "10dp"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/line"
        android:layout_gravity = "center_vertical"
        android:id="@+id/email_contacts"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/email1x"
            android:id="@+id/phone_image_email"
            android:paddingTop="7dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSignature"
            android:text = "Email Contacts"
            android:layout_toRightOf="@+id/phone_image_email"
            android:textStyle="bold"
            android:id="@+id/phone_text_email"
            android:layout_marginLeft="5dp"
            android:paddingTop="4dp"
            android:paddingLeft="5dp"
            android:paddingBottom="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/no_items_email"
            android:layout_toRightOf="@+id/phone_text_email"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorSignature"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text = "21 invited"
            android:paddingTop ="2dp"
            android:id="@+id/email_invited"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_text_email"
            android:textColor="@color/textcolor_invite"
            android:textSize="13sp"
            android:layout_marginLeft="24dp"
            android:paddingBottom="10dp"

            android:id="@+id/text_email"
            />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_contacts"
        android:orientation="vertical"
        android:id="@+id/linearLayoutemail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop ="4dp"
        android:paddingBottom="4dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blueuser1x"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_email1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = ""
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/text_email1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop ="4dp"
        android:paddingBottom="4dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blueuser1x"
            android:layout_marginLeft="20dp"
            android:id="@+id/image_email2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = ""
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/text_email2"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop ="4dp"
            android:paddingBottom="4dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blueuser1x"
                android:layout_marginLeft="20dp"
                android:id="@+id/image_email3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = ""
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/text_email3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop ="4dp"
                android:paddingBottom="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/blueuser1x"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/image_email4"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = ""
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/text_email4"/>
    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop ="4dp"
                    android:paddingBottom="4dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blueuser1x"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/image_email5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = ""
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/text_email5"/>
        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop ="4dp"
                        android:paddingBottom="4dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/blueuser1x"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/image_email6"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text = ""
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/text_email6"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop ="4dp"
                            android:paddingBottom="4dp"

                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/blueuser1x"
                                android:layout_marginLeft="20dp"
                                android:id="@+id/image_email7"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text = ""
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center_vertical"
                                android:id="@+id/text_email7"/>


                        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/line"
            android:text ="Add More"
            android:id="@+id/addMore"
            android:padding="4dp"
            android:textColor="@color/colorSignature"/>


</LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_invite"
        android:text="SEND INVITES"
        android:textColor="@color/colorwhite"
        android:background="@color/colorSignature"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>
