<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/pop"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/status"
       android:text="Waitlisted for approval"
       android:textColor="#000000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/status"
        android:text="You can't checkout at this moment\nas your profile has currently been\nwaitlisted for approval."
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/talk"
        android:layout_below="@id/msg"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Talk to us to find out more"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okay"
        android:id="@+id/ok"
        android:layout_below="@id/talk"
        android:textColor="#3380B6"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/talk"
        />
</RelativeLayout>
