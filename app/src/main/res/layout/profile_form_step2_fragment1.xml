<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeb85f">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<Button-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:background="@drawable/arrow_up"-->
        <!--android:layout_gravity="center_horizontal" />-->

        <TextView
            android:id="@+id/details_submitted_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Details submitted! Contact us for changes "
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/save_and_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Save and proceed"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"/>

        <android.support.v7.widget.CardView android:id="@+id/fragment1_card_view"
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="300dp"
                                            android:layout_above="@id/save_and_proceed"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginLeft="8dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="-8dp"
                                            card_view:cardBackgroundColor="@android:color/white"
                                            card_view:cardCornerRadius="4dp"
                                            card_view:cardElevation="2dp"
                                            card_view:cardUseCompatPadding="true">

            <ScrollView
                android:id="@+id/parent_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter your Date of Birth"
                            android:textColor="#eeb85f"
                            android:textSize="14sp"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/incomplete_dob"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/incomplete"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/complete_dob"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/complete"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/user_dob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/user_dob_edittext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-4dp"
                            android:layout_marginStart="-4dp"
                            android:width="240dp"
                            android:drawableEnd="@drawable/calendar"
                            android:drawableRight="@drawable/calendar"
                            android:focusable="false"
                            android:hint="Select your date of birth"
                            android:inputType="date"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:visibility="visible"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tell us where you stay"
                                android:textColor="#eeb85f"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/incomplete_address"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/incomplete"
                                android:visibility="gone"/>

                            <ImageView
                                android:id="@+id/complete_address"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginStart="8dp"
                                android:src="@drawable/complete"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/address_helptip"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/helptip"/>
                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/place_of_stay"
                        android:layout_width="232dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                    <View
                        android:layout_width="232dp"
                        android:layout_height="1dp"
                        android:alpha="0.6"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/edit_current_address"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ellipsize="marquee"
                        android:focusable="false"
                        android:hint="Current Address Locality"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="232dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="#000000"/>

                    <TextView
                        android:id="@+id/edit_permanent_address"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:ellipsize="marquee"
                        android:focusable="false"
                        android:hint="Permanent Address Locality"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="232dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="#000000"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/gpa_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:entries="@array/gpa_values"/>

                        <EditText
                            android:id="@+id/gpa_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_toRightOf="@id/gpa_spinner"
                            android:digits="0123456789."
                            android:hint="Percentage/GPA"
                            android:inputType="numberDecimal"
                            android:maxLength="5"/>

                        <TextView
                            android:id="@+id/spinner_error_msg_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/gpa_value"
                            android:layout_marginBottom="50dp"
                            android:layout_toRightOf="@id/gpa_spinner"
                            android:textColor="@color/intercomsdk_red"/>

                    </RelativeLayout>


                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/formPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fragment1_card_view"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goto_fragment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    android:elevation="1dp"
                    android:focusable="false"
                    android:padding="4dp"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ffffff"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/up_arrow"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/incomplete_step_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:src="@drawable/incomplete"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/goto_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:alpha="0.5"
                android:clickable="false"
                android:elevation="1dp"
                android:focusable="false"
                android:padding="4dp"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/incomplete_step_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:src="@drawable/incomplete"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/goto_fragment3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:alpha="0.5"
                android:clickable="false"
                android:elevation="1dp"
                android:focusable="false"
                android:padding="4dp"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"/>

            <ImageView
                android:id="@+id/incomplete_step_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-16dp"
                android:layout_marginStart="-16dp"
                android:src="@drawable/incomplete"
                android:visibility="gone"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/verify_image_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/formPager"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:minHeight="100dp"
            android:src="@mipmap/step2fragment1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/current_address_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:background="#ffffff"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/close_current_address_layout"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/close_black"/>

            <TextView
                android:id="@+id/current_address_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:text="Enter your Current Address Locality"
                android:textSize="16sp"/>
        </LinearLayout>

        <AutoCompleteTextView
            android:id="@+id/google_current_address_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll1"
            android:layout_marginTop="24dp"
            android:cursorVisible="true"
            android:hint="Current Address Locality"
            android:inputType="textAutoComplete"
            android:popupBackground="@color/transparent"
            android:textSize="16sp"/>


        <Button
            android:id="@+id/submit_address"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border_radius_yellow"
            android:paddingEnd="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingStart="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"
            android:textSize="16sp"/>
    </RelativeLayout>


</RelativeLayout>