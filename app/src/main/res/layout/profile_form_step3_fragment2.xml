<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f2954e">

    <!--<Button-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:background="@drawable/arrow_up"-->
    <!--android:layout_gravity="center_horizontal" />-->
    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Previous"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/details_submitted_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Details submitted! Contact us for changes "
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="16sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/save_and_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="Save and proceed"
        android:textAllCaps="false"
        android:textColor="@color/colorwhite"
        android:textSize="16sp"/>

    <android.support.v7.widget.CardView android:id="@+id/fragment1_card_view"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="300dp"
                                        android:layout_above="@id/save_and_proceed"
                                        android:layout_marginEnd="8dp"
                                        android:layout_marginLeft="8dp"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="-8dp"
                                        card_view:cardBackgroundColor="@android:color/white"
                                        card_view:cardCornerRadius="4dp"
                                        card_view:cardElevation="2dp"
                                        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:id="@+id/parent_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter your monthly expenditure"
                            android:textColor="#f2954e"
                            android:textStyle="bold"/>

                        <ImageView
                            android:id="@+id/incomplete_monthly_expenditure"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/incomplete"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/complete_monthly_expenditure"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/complete"
                            android:visibility="gone"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/expenditure_helptip"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="2dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:scaleType="fitCenter"
                        android:src="@drawable/helptip"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(excluding college fees)"
                    android:textColor="#f2954e"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/monthly_expenditure"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="232dp"
                    android:layout_height="1dp"
                    android:alpha="0.6"
                    android:background="#000000"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="Do you have a vehicle at your current residence?"
                        android:textColor="#f2954e"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/incomplete_vehicle_details"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/incomplete"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/complete_vehicle_details"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/complete"
                        android:visibility="gone"/>
                </LinearLayout>

                <Spinner
                    android:id="@+id/vehicle"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <View
                    android:layout_width="232dp"
                    android:layout_height="1dp"
                    android:alpha="0.6"
                    android:background="#000000"/>

                <Spinner
                    android:id="@+id/vehicle_type"
                    android:layout_width="232dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/view_vehicle_type"
                    android:layout_width="232dp"
                    android:layout_height="1dp"
                    android:alpha="0.6"
                    android:background="#000000"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/formPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment1_card_view"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goto_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:elevation="1dp"
            android:focusable="false"
            android:padding="4dp"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/incomplete_step_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="-16dp"
            android:src="@drawable/incomplete"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goto_fragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:elevation="1dp"
                android:focusable="false"
                android:padding="4dp"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/up_arrow"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/incomplete_step_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-16dp"
            android:layout_marginStart="-16dp"
            android:src="@drawable/incomplete"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/goto_fragment3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:alpha="0.5"
            android:clickable="false"
            android:elevation="1dp"
            android:focusable="false"
            android:padding="4dp"
            android:text="3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/incomplete_step_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-16dp"
            android:layout_marginStart="-16dp"
            android:src="@drawable/incomplete"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/verify_image_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/formPager"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minHeight="100dp"
        android:src="@mipmap/step3fragment2"/>
</RelativeLayout>