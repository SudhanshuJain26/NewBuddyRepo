<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Formstatus">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl11"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            style="@style/DrawerArrowStyle"
            layout="@layout/toolbar" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:padding="10dp">


            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/images" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="Aniket Verma"
                android:textAppearance="?android:textAppearanceMedium" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/profile_image"
                android:text="aniket1259.11@bitmesra.ac.in"
                android:textColor="#664A4A4A" />

            <TextView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/profile_image"
                android:background="#21A5E0"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="View Application Form"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:visibility="gone"

                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/upl"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/rl1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:src="@drawable/uploaddoc" />

        <TextView
            android:id="@+id/applymsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upl"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="2.5dp"
            android:text="Hi! Your profile is complete but your"
            android:textColor="#4A4A4A" />

        <TextView
            android:id="@+id/applymsg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applymsg"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:padding="2.5dp"

            android:text="documents are yet to be uploaded."
            android:textColor="#4A4A4A" />

        <TextView
            android:id="@+id/applymsg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applymsg2"
            android:layout_centerInParent="true"
            android:padding="2.5dp"
            android:text="Upload your documents now!"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/applymsg3"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"

            android:background="#21A5E0"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="Upload Documents!"
            android:textColor="#ffffff"

            />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/apply"
            android:layout_centerInParent="true"
            android:background="@xml/progress"
            android:visibility="gone" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apply"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="OR"
            android:textColor="#4A4A4A"

            android:visibility="gone" />

        <TextView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/or"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="Check out some of our products"
            android:textColor="#4A4A4A" />

        <TextView
            android:id="@+id/wbsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="on the website"
            android:textColor="#21A5E0" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/chaticon"
            android:visibility="gone"
            app:backgroundTint="#21A5E0" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#2A374C"
        app:headerLayout="@layout/header"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:menu="@menu/drawer" />

</android.support.v4.widget.DrawerLayout>